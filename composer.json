{
  "autoload": {
    "psr-4": {
      "CBC\\Api\\": "src/"
    },
    "files": [
      "config.php"
    ]
  },
  "require": {
    "ext-pdo": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "phan/phan": "^5.4"
  },
  "scripts": {
    "cs": "phpcs --standard=PSR12 src/",
    "phan": "phan --allow-polyfill-parser",
    "checkcode": [
      "@phan",
      "@cs"
    ],
    "startserver":"php -S localhost:8000"
  },
  "scripts-descriptions": {
    "checkcode": "Roda as verificações do código com PHAN e PHPCS."
  }
}
